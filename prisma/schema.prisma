// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  agents    Agent[]
  Account   Account[]
  Session   Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Agent {
  id             String   @id @default(cuid())
  name           String
  description    String?
  model          String   @default("claude-3-5-sonnet-20241022")
  userId         String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  // AgentVerse specific fields
  personality    String?
  role           String?  // researcher, strategist, critic, ideator, coordinator, executor
  specialization String?
  departmentId   String?
  // Visual customization for game
  color          String?  @default("#a855f7")
  size           Int?     @default(20)
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages       Message[]
  department     Department? @relation(fields: [departmentId], references: [id], onDelete: SetNull)
  tasksAssigned  Task[]   @relation("AssignedTasks")
  tasksCreated   Task[]   @relation("CreatedTasks")

  @@index([userId])
  @@index([role])
  @@index([departmentId])
  @@index([userId, role])
}

model Message {
  id        String   @id @default(cuid())
  content   String
  role      String   // 'user', 'assistant', or 'system'
  agentId   String
  createdAt DateTime @default(now())
  // Message metadata for inter-agent communication
  fromAgent String?
  toAgent   String?
  taskId    String?
  priority  String?  // low, medium, high, urgent
  type      String?  // query, response, notification, task
  agent     Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  task      Task?    @relation(fields: [taskId], references: [id], onDelete: SetNull)

  @@index([agentId])
  @@index([createdAt])
  @@index([agentId, createdAt])
  @@index([taskId])
  @@index([fromAgent])
  @@index([toAgent])
}

model Department {
  id          String   @id @default(cuid())
  name        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  agents      Agent[]
  tasks       Task[]
}

model Task {
  id           String   @id @default(cuid())
  title        String
  description  String
  status       String   @default("pending") // pending, in_progress, blocked, completed, failed
  priority     String   @default("medium")  // low, medium, high, urgent
  assignedTo   String?
  createdBy    String?
  departmentId String?
  result       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  completedAt  DateTime?
  assignedAgent Agent?  @relation("AssignedTasks", fields: [assignedTo], references: [id], onDelete: SetNull)
  createdByAgent Agent? @relation("CreatedTasks", fields: [createdBy], references: [id], onDelete: SetNull)
  department   Department? @relation(fields: [departmentId], references: [id], onDelete: SetNull)
  messages     Message[]

  @@index([assignedTo])
  @@index([createdBy])
  @@index([departmentId])
  @@index([status])
  @@index([priority])
  @@index([status, priority])
}

model WorkflowExecution {
  id           String   @id @default(cuid())
  workflowId   String   @unique
  departmentId String
  userId       String
  input        String
  output       String?
  status       String   @default("pending") // pending, in_progress, completed, failed, cancelled
  error        String?
  executionTime Int?    // in milliseconds
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  completedAt  DateTime?
  steps        WorkflowStep[]

  @@index([userId])
  @@index([departmentId])
  @@index([status])
  @@index([createdAt])
}

model WorkflowStep {
  id                String   @id @default(cuid())
  workflowExecutionId String
  stepNumber        Int
  agentRole         String
  agentId           String?
  description       String
  input             String?
  output            String?
  status            String   @default("pending") // pending, in_progress, completed, failed, skipped
  error             String?
  startedAt         DateTime?
  completedAt       DateTime?
  workflowExecution WorkflowExecution @relation(fields: [workflowExecutionId], references: [id], onDelete: Cascade)

  @@index([workflowExecutionId])
  @@index([status])
}

model UserQuery {
  id           String   @id @default(cuid())
  workflowId   String
  agentId      String
  question     String
  answer       String?
  context      String?  // JSON string
  status       String   @default("pending") // pending, answered, timeout
  createdAt    DateTime @default(now())
  answeredAt   DateTime?
  timeoutAt    DateTime?

  @@index([workflowId])
  @@index([agentId])
  @@index([status])
}

// Agent Status Dashboard - Metrics Tracking
model AgentMetrics {
  id                String   @id @default(cuid())
  agentId           String
  timestamp         DateTime @default(now())
  // Performance metrics
  responseTimeMs    Int?     // Average response time in milliseconds
  totalExecutions   Int      @default(0)
  successfulExecs   Int      @default(0)
  failedExecs       Int      @default(0)
  // Activity metrics
  messagesProcessed Int      @default(0)
  tasksCompleted    Int      @default(0)
  // Aggregation period (e.g., hourly, daily)
  periodType        String   @default("hourly") // hourly, daily, weekly
  periodStart       DateTime
  periodEnd         DateTime

  @@index([agentId])
  @@index([timestamp])
  @@index([agentId, timestamp])
  @@index([periodType, periodStart])
}

// Agent Status Dashboard - Status History Tracking
model AgentStatusLog {
  id          String   @id @default(cuid())
  agentId     String
  status      String   // idle, thinking, communicating, error
  details     String?  // Additional context about the status
  taskId      String?
  workflowId  String?
  duration    Int?     // Duration in milliseconds
  timestamp   DateTime @default(now())
  endTime     DateTime?

  @@index([agentId])
  @@index([timestamp])
  @@index([agentId, timestamp])
  @@index([status])
  @@index([taskId])
  @@index([workflowId])
}

// Agent Status Dashboard - Centralized Error Logging
model ErrorLog {
  id          String   @id @default(cuid())
  agentId     String
  agentName   String
  errorType   String   // execution_error, timeout, api_error, validation_error
  errorMessage String
  stackTrace  String?
  context     String?  // JSON string with additional context
  taskId      String?
  workflowId  String?
  resolved    Boolean  @default(false)
  resolvedAt  DateTime?
  timestamp   DateTime @default(now())

  @@index([agentId])
  @@index([timestamp])
  @@index([agentId, timestamp])
  @@index([errorType])
  @@index([resolved])
  @@index([taskId])
  @@index([workflowId])
}
